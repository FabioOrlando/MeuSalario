<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
>

    <EditText
            android:id="@+id/txtNomeDoFuncionario"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="Nome do Funcionário"
            android:gravity="center"
            android:background="@drawable/round_text"
            android:inputType="textPersonName"
    />

    <EditText
            android:id="@+id/txtValorHoraTrabalhada"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="Valor da Hora Trabalhada"
            android:background="@drawable/round_text"
            android:gravity="center"
            android:inputType="numberDecimal"
    />

    <EditText
            android:id="@+id/txtQtdDiasTrabalhados"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="Quantidade de Dias Trabalhados"
            android:gravity="center"
            android:background="@drawable/round_text"
            android:inputType="number"
    />

    <EditText
            android:id="@+id/txtQtdHorasPorDia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="Quantidade de Horas Por Dia"
            android:gravity="center"
            android:background="@drawable/round_text"
            android:inputType="number"
    />

    <TextView
            android:id="@+id/lblSalarioBruto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Salário Bruto: "
            android:textSize="16dp"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/lblDescISS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Desc. ISS: "
            android:textSize="16dp"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/lblDescFGTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Desc. FGTS: "
            android:textSize="16dp"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/lblSalarioLiquido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Salário Líquido: "
            android:textSize="16dp"
            android:textStyle="bold"
    />

    <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:text="Calcular "
            android:background="@drawable/round_btn"
            android:textSize="18dp"
            android:textColor="#fdfdfd"
            android:textStyle="bold"
    />


</LinearLayout >